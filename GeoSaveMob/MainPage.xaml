<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GeoSaveMob.ViewModels"
             x:Class="GeoSaveMob.MainPage"
             x:DataType="vm:MainVModel">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label Text="{Binding Location}" FontSize="Medium" HorizontalOptions="Center" />
            <Button
                x:Name="CounterBtn"
                Text="Get Location"
                HorizontalOptions="Center"
                Command="{Binding GetLocation}"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
